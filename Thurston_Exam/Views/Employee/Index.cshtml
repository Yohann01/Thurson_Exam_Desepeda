
@{
    ViewBag.Title = "Index";
}


<h2>Employee Records</h2>

<form method="get" action="@Url.Action("Index")">
    <div class="create-search-container">
        <div class="create-container">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })


        </div>

        <div class="form-group search-container" id="search-container">
            <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewBag.CurrentFilter" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>

    </div>
</form>


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Position</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = employee.EmployeeID }, new { @class = "btn btn-info" })

                        @Html.ActionLink("Details", "Details", new { id = employee.EmployeeID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = employee.EmployeeID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}